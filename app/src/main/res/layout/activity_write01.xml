<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="com.example.dream.mygo.Write01">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_gravity="center">
            </LinearLayout>

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="제목"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorPont1"
                android:textColorHint="@color/colorPont1"
                android:id="@+id/titleText"
                android:drawableStart="@drawable/ic_edit_black_24dp"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPont2"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:hint="내용"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorPont1"
                android:textColorHint="@color/colorPont1"
                android:id="@+id/StroyText"
                android:drawableStart="@drawable/ic_edit_black_24dp"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPont2"/>
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고민 종류는 무엇입니까?"
                android:layout_gravity="center"
                android:textColor="@color/colorPont2"
                android:layout_marginTop="10dp"/>
            <Spinner
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/worryText">
            </Spinner>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/backButton"
                    android:textSize="20dp"
                    android:hint="뒤로가기"
                    android:drawableStart="@drawable/ic_undo_black_24dp"
                    android:drawableLeft="@drawable/ic_undo_black_24dp"/>


            </LinearLayout>

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPont"
                android:text="글 남기기"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/okButton"/>


        </LinearLayout>
    </LinearLayout>

