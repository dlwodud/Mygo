<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.dream.mygo.Write01">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"></LinearLayout>

            <EditText
                android:id="@+id/titleText"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/colorPont2"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:drawableStart="@drawable/ic_edit_black_24dp"
                android:hint="제목"
                android:padding="10dp"
                android:textColor="@color/colorPont1"
                android:textColorHint="@color/colorPont1" />

            <EditText
                android:id="@+id/StroyText"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/colorPont2"
                android:drawableLeft="@drawable/ic_edit_black_24dp"
                android:drawableStart="@drawable/ic_edit_black_24dp"
                android:hint="내용"
                android:padding="10dp"
                android:textColor="@color/colorPont1"
                android:textColorHint="@color/colorPont1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="고민상담 대상의 성별은 무엇입니까?"
                android:textColor="@color/colorPont2" />

            <RadioGroup
                android:id="@+id/genderGroup"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/genderWoman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="여성" />

                <RadioButton
                    android:id="@+id/genderMan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="남성" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="고민상담 대상의 나이는 무엇입니까?"
                android:textColor="@color/colorPont2" />

            <Spinner
                android:id="@+id/ageText"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="고민 종류는 무엇입니까?"
                android:textColor="@color/colorPont2" />

            <Spinner
                android:id="@+id/worryText"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"></Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/timeText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPont2"
                    android:drawableLeft="@drawable/ic_edit_black_24dp"
                    android:drawableStart="@drawable/ic_edit_black_24dp"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:hint="72"
                    android:padding="10dp"
                    android:textColor="@color/colorPont1"
                    android:textColorHint="@color/colorPont1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="시간 후 삭제 예약"
                    android:textColor="@color/colorPont2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_undo_black_24dp"
                    android:drawableStart="@drawable/ic_undo_black_24dp"
                    android:hint="뒤로가기"
                    android:padding="10dp"
                    android:textSize="20dp" />


            </LinearLayout>

            <Button
                android:id="@+id/okButton"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="글 남기기"
                android:textColor="@color/colorPont"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>

